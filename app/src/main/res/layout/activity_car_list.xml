<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/car_park" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Car Details"
                android:textColor="#111"
                android:textSize="23sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/list_selector"
                android:orientation="horizontal"
                android:padding="5dp">

                <!--  ListRow Left sied Thumbnail image -->

                <!-- Title Of Song-->
                <TextView
                    android:id="@+id/plate_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="License Plate"
                    android:textColor="#040404"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <!-- Artist Name -->

                <!-- Rightend Duration -->
                <TextView
                    android:id="@+id/textViewPlate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/plate_label"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="5dip"
                    android:layout_marginRight="5dip"
                    android:gravity="end"
                    android:text="RAB100C"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Rightend Arrow -->

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/list_selector"
                android:orientation="horizontal"
                android:padding="5dp"
                android:visibility="visible">

                <!--  ListRow Left sied Thumbnail image -->

                <!-- Title Of Song-->
                <TextView
                    android:id="@+id/post_paid_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Post Paid"
                    android:textColor="#040404"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <!-- Artist Name -->

                <!-- Rightend Duration -->
                <TextView
                    android:id="@+id/textPostPaid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/post_paid_label"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="5dip"
                    android:layout_marginRight="5dip"
                    android:gravity="end"
                    android:text="RAB100C"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Rightend Arrow -->

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/list_selector"
                android:orientation="horizontal"
                android:padding="5dp"
                android:visibility="gone">

                <!--  ListRow Left sied Thumbnail image -->

                <!-- Title Of Song-->
                <TextView
                    android:id="@+id/phone_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone Number"
                    android:textColor="#040404"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:typeface="sans"
                    android:visibility="visible" />

                <!-- Artist Name -->

                <!-- Rightend Duration -->
                <TextView
                    android:id="@+id/textViewPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/phone_label"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="5dip"
                    android:layout_marginRight="5dip"
                    android:gravity="end"
                    android:text="0780674459"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <!-- Rightend Arrow -->

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/list_selector"
                android:orientation="horizontal"
                android:padding="5dp">

                <!--  ListRow Left sied Thumbnail image -->

                <!-- Title Of Song-->
                <TextView
                    android:id="@+id/timein_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time In"
                    android:textColor="#040404"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <!-- Artist Name -->

                <!-- Rightend Duration -->
                <TextView
                    android:id="@+id/textViewTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/timein_label"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="5dip"
                    android:layout_marginRight="5dip"
                    android:gravity="end"
                    android:text="08:22:26"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <!-- Rightend Arrow -->

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/list_selector"
                android:orientation="horizontal"
                android:padding="5dp">

                <!--  ListRow Left sied Thumbnail image -->

                <!-- Title Of Song-->
                <TextView
                    android:id="@+id/timeout_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time Out"
                    android:textColor="#040404"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <!-- Artist Name -->

                <!-- Rightend Duration -->
                <TextView
                    android:id="@+id/textViewTimeOut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/timeout_label"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="5dip"
                    android:layout_marginRight="5dip"
                    android:gravity="end"
                    android:text="08:22:26"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <!-- Rightend Arrow -->

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/list_selector"
                android:orientation="horizontal"
                android:padding="5dp">

                <!--  ListRow Left sied Thumbnail image -->

                <!-- Title Of Song-->

                <TextView
                    android:id="@+id/timespent_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time Spent"
                    android:textColor="#040404"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <!-- Artist Name -->

                <!-- Rightend Duration -->
                <TextView
                    android:id="@+id/textHours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/timespent_label"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="5dip"
                    android:layout_marginRight="5dip"
                    android:gravity="end"
                    android:text="08:22:26"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <!-- Rightend Arrow -->

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/list_selector"
                android:orientation="horizontal"
                android:padding="5dp">

                <!--  ListRow Left sied Thumbnail image -->

                <!-- Title Of Song-->

                <TextView
                    android:id="@+id/amount_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amount to Pay"
                    android:textColor="#040404"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <!-- Artist Name -->

                <!-- Rightend Duration -->
                <TextView
                    android:id="@+id/textPay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/amount_label"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="5dip"
                    android:layout_marginRight="5dip"
                    android:gravity="end"
                    android:text="200.0 Rwf"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <!-- Rightend Arrow -->

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/list_selector"
                android:orientation="horizontal"
                android:padding="5dp">

                <!--  ListRow Left sied Thumbnail image -->

                <!-- Title Of Song-->

                <TextView
                    android:id="@+id/server_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Served By"
                    android:textColor="#040404"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <!-- Artist Name -->

                <!-- Rightend Duration -->
                <TextView
                    android:id="@+id/textServedName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/server_label"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="5dip"
                    android:layout_marginRight="5dip"
                    android:gravity="end"
                    android:text="Jules Ntare"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <!-- Rightend Arrow -->

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/remove_car_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_button"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:shadowRadius="@dimen/material_emphasis_medium"
                    android:text="Proceed to Payment"
                    android:textColor="#ffd"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>