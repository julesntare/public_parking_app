<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_behavior="@string/appbar_scrolling_view_behavior">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="35dp"
                android:layout_height="25dp"
                app:srcCompat="@drawable/ic_warning" />

            <TextView
                android:id="@+id/article_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start|center_horizontal"
                android:padding="10dp"
                android:text="Warning"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:textColorHighlight="@color/colorAccent"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="#666" />

        <TextView
            android:id="@+id/article_subheading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/article_heading"
            android:padding="10dp"
            android:text="This car has a credit"
            android:textAppearance="@android:style/TextAppearance"
            android:textStyle="italic" />

        <LinearLayout
            android:id="@+id/section1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/colorAccent"
                android:orientation="horizontal"
                android:padding="15dp">

                <!--  ListRow Left sied Thumbnail image -->

                <!-- Title Of Song-->
                <TextView
                    android:id="@+id/credit_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Credited"
                    android:textColor="#fff"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <!-- Artist Name -->

                <!-- Rightend Duration -->
                <TextView
                    android:id="@+id/textCredit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/credit_label"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="5dip"
                    android:layout_marginRight="5dip"
                    android:gravity="end"
                    android:text="5,000 Rwf"
                    android:textColor="#fff"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <!-- Rightend Arrow -->

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/list_selector"
                android:orientation="horizontal"
                android:padding="2dp">

                <!--  ListRow Left sied Thumbnail image -->

                <!-- Title Of Song-->
                <TextView
                    android:id="@+id/plate_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="License Plate"
                    android:textColor="#040404"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <!-- Artist Name -->

                <!-- Rightend Duration -->
                <TextView
                    android:id="@+id/textViewPlate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/plate_label"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="5dip"
                    android:layout_marginRight="5dip"
                    android:gravity="end"
                    android:text="RAB100C"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Rightend Arrow -->

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/list_selector"
                android:orientation="horizontal"
                android:padding="2dp"
                android:visibility="gone">

                <!--  ListRow Left sied Thumbnail image -->

                <!-- Title Of Song-->
                <TextView
                    android:id="@+id/phone_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone Number"
                    android:textColor="#040404"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <!-- Artist Name -->

                <!-- Rightend Duration -->
                <TextView
                    android:id="@+id/textViewPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/phone_label"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="5dip"
                    android:layout_marginRight="5dip"
                    android:gravity="end"
                    android:text="0780674459"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <!-- Rightend Arrow -->

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/list_selector"
                android:orientation="horizontal"
                android:padding="2dp">

                <!--  ListRow Left sied Thumbnail image -->

                <!-- Title Of Song-->
                <TextView
                    android:id="@+id/timein_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time In"
                    android:textColor="#040404"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <!-- Artist Name -->

                <!-- Rightend Duration -->
                <TextView
                    android:id="@+id/textViewTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/timein_label"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="5dip"
                    android:layout_marginRight="5dip"
                    android:gravity="end"
                    android:text="08:22:26"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <!-- Rightend Arrow -->

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/list_selector"
                android:orientation="horizontal"
                android:padding="2dp">

                <!--  ListRow Left sied Thumbnail image -->

                <!-- Title Of Song-->

                <TextView
                    android:id="@+id/server_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Served By"
                    android:textColor="#040404"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <!-- Artist Name -->

                <!-- Rightend Duration -->
                <TextView
                    android:id="@+id/textServedName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/server_label"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="5dip"
                    android:layout_marginRight="5dip"
                    android:gravity="end"
                    android:text="Jules Ntare"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <!-- Rightend Arrow -->

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/stop_car_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_red_button"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:shadowRadius="@dimen/material_emphasis_medium"
                    android:text="Pay"
                    android:textColor="#ffd"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/park_car_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_button"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:shadowRadius="@dimen/material_emphasis_medium"
                    android:text="Park"
                    android:textColor="#ffd"
                    android:textSize="17sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</RelativeLayout>